.container
  %center
    .font-family#verdana
      %h3 Welcome to Gaming Zone, Please login to continue
  .row-marketing
    .col-lg-6
      = image_tag("sports.jpg")
    .container
      .col-lg-6
        %br
        %br
        %br
        %br
        %br
        .jumbotron
          =form_for @user, html: {class: "form-signin"}, url: login_path do |f|
            .form-group
              =f.label "Email Address"
              =f.text_field :email, class: "form-control"
            %br
            .form-group
              =f.label("Password",:html => {:for => "inputPassword", :class => "sr-only"})
              =f.password_field :password, class: "form-control"
            %br
            =f.submit("Log In", :class => "btn btn-lg btn-primary btn-block")
