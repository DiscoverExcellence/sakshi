= render "/shared/navbar"
.container
  .row-marketing
    .col-lg-8
      .jumbotron
        .container
          %table.table
            %thead
              %tr
                %th Tournaments
            %tbody
              - @tournament_list.each do |tournament|
                %tr
                  %td
                    = tournament.name
                  %td
                    = link_to "Show Details", tournament_path(tournament)
                    = link_to "Edit", edit_tournament_path(tournament)
                    = link_to "Delete", tournament, method: :delete, data: { confirm: "Are you sure?" }
    .col-lg-4
      .container 
        .center
          = image_tag("new_game.jpg" , class: "img-circle", width: "200", height: "200")
          .center
            %h3 Enter a new tournament
            %a{ class:"btn btn-primary", href: "/tournaments/new", role:"button"} New Tournament
