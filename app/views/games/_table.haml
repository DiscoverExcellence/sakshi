%tr
  %td
    = game.name
  %td
    %button.btn.btn-default
        = link_to "Show Details", game_path(game), html => {:class => "btn btn-default", :role => "button"}
    = link_to "Edit", edit_game_path(game)
    %button.danger
      = link_to "Delete", game, method: :delete, data: { confirm: "Are you sure?" }
    = link_to "List Match", game_matches_path(game)
